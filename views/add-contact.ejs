<div class="container mt-10 mx-auto font-mono">
    <div class="bg-slate-100 mx-auto w-2/5 border-2 rounded-md shadow-lg">
        <h2 class="text-center font-semibold text-3xl mt-4">Tambah Data Kontak</h2>

        <% if (typeof errors != 'undefined') { %>
         <div class="bg-red-300 text-red-800 px-5 w-4/5 rounded-md shadow-md mx-auto m-5">
            <ul>
                <% errors.forEach(error => { %>
                    <li class="text-center"><%= error.msg %></li>
                <% }) %>
            </ul>
         </div>
        <% } %>

        <form class="p-4" method="post" action="/contact">
            <div class="mb-6">
                <label for="nama" class="block mb-2 font-medium text-gray-900">Nama :</label>
                <input type="text" id="nama" name="nama"
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                    placeholder="Aldi Abdillah" required>
            </div>
            <div class="mb-6">
                <label for="email" class="block mb-2 font-medium text-gray-900">Email :</label>
                <input type="email" id="email" name="email"
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                    placeholder="Aldi@gmail.com">
            </div>
            <div class="mb-6">
                <label for="nohp" class="block mb-2 font-medium text-gray-900">No HP :</label>
                <input type="number" id="nohp" name="nohp"
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                    placeholder="082738652xxx">
            </div>
            <button type="submit"
                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center ">Submit</button>
        </form>

    </div>

</div>